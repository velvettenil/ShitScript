local TweenService = game:GetService("TweenService")
local ScreenGui = Instance.new("ScreenGui")
local ToggleButton = Instance.new("TextButton")
local MainFrame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local TabContainer = Instance.new("Frame")
local ContentContainer = Instance.new("Frame")
local Notification = Instance.new("TextLabel")
local BlurEffect = Instance.new("BlurEffect", game.Lighting)

ScreenGui.Parent = game.CoreGui
BlurEffect.Size = 10

-- Main Frame Setup (Glass-like Transparent with Purple Hue)
MainFrame.Parent = ScreenGui
MainFrame.Size = UDim2.new(0, 620, 0, 420)
MainFrame.Position = UDim2.new(0.5, -310, 0.5, -210)
MainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 30)
MainFrame.BackgroundTransparency = 0.5 -- Fully transparent but tinted
MainFrame.BorderSizePixel = 0
MainFrame.Active = true
MainFrame.Draggable = true
MainFrame.ClipsDescendants = true

-- Gradient Effect for the UI (Glass-like Purple Hue)
local UIGradient = Instance.new("UIGradient")
UIGradient.Parent = MainFrame
UIGradient.Rotation = 45
UIGradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(60, 0, 120)), -- Purple gradient start
    ColorSequenceKeypoint.new(1, Color3.fromRGB(20, 20, 30)) -- Darker purple end
}

-- Title Setup (Slight Transparency with Purple Hue)
Title.Parent = MainFrame
Title.Size = UDim2.new(1, 0, 0.12, 0)
Title.BackgroundTransparency = 0.5 -- Slight transparency
Title.Text = "Xenor Hub"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.GothamBlack
Title.TextSize = 30
Title.TextStrokeTransparency = 0.2
Title.BorderSizePixel = 0

-- TabContainer Setup (Purple Glass with Transparency)
TabContainer.Parent = MainFrame
TabContainer.Size = UDim2.new(0.23, 0, 0.88, 0)
TabContainer.Position = UDim2.new(0, 0, 0.12, 0)
TabContainer.BackgroundColor3 = Color3.fromRGB(30, 0, 60)
TabContainer.BackgroundTransparency = 0.3 -- Slight transparency for a glass-like effect
TabContainer.BorderSizePixel = 0

-- ContentContainer Setup (Purple Glass with Transparency)
ContentContainer.Parent = MainFrame
ContentContainer.Size = UDim2.new(0.77, 0, 0.88, 0)
ContentContainer.Position = UDim2.new(0.23, 0, 0.12, 0)
ContentContainer.BackgroundTransparency = 0.3 -- Slight transparency for a glass-like effect
ContentContainer.BackgroundColor3 = Color3.fromRGB(40, 0, 80)
ContentContainer.BorderSizePixel = 0

-- Notification Setup (Welcome Text)
Notification.Size = UDim2.new(0, 320, 0, 55)
Notification.Position = UDim2.new(0.5, -160, 0.05, 0)
Notification.BackgroundTransparency = 0.3
Notification.BackgroundColor3 = Color3.fromRGB(150, 0, 250)
Notification.Text = "Welcome to Xenor Hub!"
Notification.TextColor3 = Color3.fromRGB(255, 255, 255)
Notification.Font = Enum.Font.GothamBlack
Notification.TextSize = 22
Notification.TextStrokeTransparency = 0.1
Notification.Visible = false

-- Notification fade in and out effect
local fadeTween = TweenService:Create(Notification, TweenInfo.new(3, Enum.EasingStyle.Quint, Enum.EasingDirection.Out), {BackgroundTransparency = 1, TextTransparency = 1})
Notification.Visible = true
fadeTween:Play()

-- Toggle Button Setup (Transparent with Purple Hue, Glass-like Effect)
ToggleButton.Parent = ScreenGui
ToggleButton.Size = UDim2.new(0, 100, 0, 40)
ToggleButton.Position = UDim2.new(0.05, 0, 0.05, 0)
ToggleButton.BackgroundColor3 = Color3.fromRGB(100, 0, 200) -- Purple with glass effect
ToggleButton.BackgroundTransparency = 0.5 -- Glass-like effect
ToggleButton.Text = "Toggle UI"
ToggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleButton.Font = Enum.Font.GothamBold
ToggleButton.TextSize = 16
ToggleButton.BorderSizePixel = 0
ToggleButton.TextStrokeTransparency = 0.2

-- Making Toggle Button Draggable
local dragToggle = false
local dragInput, dragStart, startPos

ToggleButton.MouseButton1Down:Connect(function(input)
    dragToggle = true
    dragStart = input.Position
    startPos = ToggleButton.Position
end)

game:GetService("UserInputService").InputChanged:Connect(function(input)
    if dragToggle then
        local delta = input.Position - dragStart
        ToggleButton.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

ToggleButton.MouseButton1Up:Connect(function()
    dragToggle = false
end)

-- Toggle UI Visibility with Blur Effect
local UIVisible = true
ToggleButton.MouseButton1Click:Connect(function()
    UIVisible = not UIVisible
    MainFrame.Visible = UIVisible
    if UIVisible then
        BlurEffect.Size = 10
    else
        BlurEffect.Size = 0
    end
end)

-- Tabs and Tab Creation
local Tabs = {
    {"üê∫ ESP", Color3.fromRGB(120, 0, 220)},
    {"üßè Misc", Color3.fromRGB(140, 0, 240)},
    {"üíÄ Blatant", Color3.fromRGB(160, 0, 260)},
    {"‚öîÔ∏è Killaura", Color3.fromRGB(180, 0, 280)},
    {"üèÅ Auto End", Color3.fromRGB(200, 0, 300)}
}

-- Function to create each tab
local function createTab(name, color, position)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, 0, 0.15, 0)
    button.Position = UDim2.new(0, 0, position, 0)
    button.Text = name
    button.BackgroundColor3 = color
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Font = Enum.Font.GothamBold
    button.TextSize = 20
    button.BorderSizePixel = 0
    button.TextStrokeTransparency = 0.2
    button.Parent = TabContainer

    -- Hover effect for the tabs
    button.MouseEnter:Connect(function()
        TweenService:Create(button, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(255, 255, 255), TextColor3 = Color3.fromRGB(0, 0, 0)}):Play()
    end)
    button.MouseLeave:Connect(function()
        TweenService:Create(button, TweenInfo.new(0.2), {BackgroundColor3 = color, TextColor3 = Color3.fromRGB(255, 255, 255)}):Play()
    end)
    return button
end

-- Create Content Frames for each tab
local function createContentFrame()
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(1, 0, 1, 0)
    frame.BackgroundTransparency = 0.3 -- Slight transparency for glass effect
    frame.BackgroundColor3 = Color3.fromRGB(45, 0, 90)
    frame.BorderSizePixel = 0
    frame.Visible = false
    frame.Parent = ContentContainer
    return frame
end

-- Tab interaction and Content display
local TabFrames = {}
for i, tab in ipairs(Tabs) do
    local button = createTab(tab[1], tab[2], (i - 1) * 0.16)
    local content = createContentFrame()
    button.MouseButton1Click:Connect(function()
        for _, frame in pairs(TabFrames) do
            frame.Visible = false
        end
        content.Visible = true
    end)
    TabFrames[i] = content
    
    -- Placeholder text on the content frame
    local placeholder = Instance.new("TextLabel")
    placeholder.Size = UDim2.new(1, 0, 1, 0)
    placeholder.Text = tab[1] .. " Scripts Coming Soon..."
    placeholder.TextColor3 = Color3.fromRGB(255, 255, 255)
    placeholder.BackgroundTransparency = 1
    placeholder.Font = Enum.Font.GothamBlack
    placeholder.TextSize = 22
    placeholder.TextStrokeTransparency = 0.1
    placeholder.Parent = content
end
